generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  uid               String?  @unique @db.VarChar(255)
  email             String   @unique @db.VarChar(255)
  first_name        String?  @db.VarChar(255)
  last_name         String?  @db.VarChar(255)
  bio               String?  
  github_username   String?  @db.VarChar(255)
  pictureUrl        String? @db.VarChar(255)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  posts             Post[]
  programLangs      UsersToProgramLang[]
}

model ProgramLang {
  id                Int       @id @default(autoincrement())
  name              String    @unique @db.VarChar(255)
  icon              String  
  users             UsersToProgramLang[]
}

model UsersToProgramLang {
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
  programLang         ProgramLang @relation(fields: [programLangId], references: [id])
  programLangId       Int
  @@id([userId, programLangId])
}


model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  published Boolean  @default(false)
  viewCount Int      @default(0)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}
