generator client {
  provider = "prisma-client-js"
}

// generator typegraphql {
//   provider = "typegraphql-prisma"
// }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  uid               String    @unique @db.VarChar(255)
  userName          String    @unique @db.VarChar(255)
  email             String    @unique @db.VarChar(255)
  firstName         String?   @db.VarChar(255)
  lastName          String?   @db.VarChar(255)
  bio               String?  
  githubUsername    String?   @db.VarChar(255)
  pictureUrl        String?   @db.VarChar(255)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now())
  programLangs      UsersToProgramLang[]
  languages         UsersToLanguages[]        
}

model ProgramLang {
  id                Int       @id @default(autoincrement())
  name              String    @unique @db.VarChar(255)
  icon              String  
  users             UsersToProgramLang[]
}

model UsersToProgramLang {
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
  programLang         ProgramLang @relation(fields: [programLangId], references: [id])
  programLangId       Int
  @@id([userId, programLangId])
}

model Language {
  id                Int       @id @default(autoincrement())
  code              String    @unique @db.VarChar(8)
  name              String    @unique @db.VarChar(255)
  nativeName        String?   @db.VarChar(255)
  users             UsersToLanguages[]  
}

model UsersToLanguages {
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
  language            Language  @relation(fields: [languageId], references: [id])
  languageId          Int
  @@id([userId, languageId])
}
